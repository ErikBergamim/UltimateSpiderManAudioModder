<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WBK File Manager" Height="750" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10893E"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D6D31"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ConvertButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#D83B01"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A52D01"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlayButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#8E44AD"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6C3483"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BatchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF6B00"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC5500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlayerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="WBK File Manager for Ultimate Spider Man GAMECUBE" FontSize="21" FontWeight="Bold" Foreground="#333333"/>
                        <TextBlock Text="Manage and replace audio files in WBK archives" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button Content="📂 Load WBK" 
                            Style="{StaticResource ModernButton}"
                            Click="LoadWbkButton_Click"
                            Margin="30,0,10,0"
                            VerticalAlignment="Center"/>
                    <Button Content="🔄 Replace Multiple" 
                            Style="{StaticResource BatchButton}"
                            Click="ReplaceMultipleButton_Click"
                            IsEnabled="{Binding IsWbkLoaded}"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="6" Padding="12,8" Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="File:" FontWeight="SemiBold" Foreground="#555555" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding WbkFileName}" Foreground="#0078D4" FontWeight="Medium"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding WbkItems}"
                  Margin="20"
                  Background="Transparent"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,15"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- File Name and Status -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="📄" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FileName}" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="#333333"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Background="#E8F5E9" 
                                        CornerRadius="12" 
                                        Padding="12,4">
                                    <TextBlock Text="{Binding Status}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#2E7D32"/>
                                </Border>
                            </Grid>

                            <!-- Details -->
                            <Grid Grid.Row="1" Margin="30,12,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                                    <TextBlock Text="Size:" FontSize="11" Foreground="#888888" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="13" Foreground="#333333" Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Offset Range:" FontSize="11" Foreground="#888888" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding OffsetDisplay}" FontSize="13" Foreground="#333333" Margin="0,3,0,0" FontFamily="Consolas"/>
                                </StackPanel>
                            </Grid>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                <Button Content="🎵 Convert and Replace" 
                                        Style="{StaticResource ConvertButton}"
                                        Click="ConvertAndReplaceButton_Click"
                                        Tag="{Binding}"
                                        Margin="0,0,10,0"/>
                                <Button Content="🔄 Replace RAW" 
                                        Style="{StaticResource ActionButton}"
                                        Click="ReplaceButton_Click"
                                        Tag="{Binding}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#0078D4" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ℹ️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           FontSize="13"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" 
                           Text="{Binding WbkItems.Count, StringFormat='Total: {0} file(s)'}" 
                           Foreground="White" 
                           FontSize="12"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
