<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PAK File Manager" Height="700" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10893E"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D6D31"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExtractButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#8764B8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6E4E9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ConvertButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#D83B01"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A52D01"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlayButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BatchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF6B00"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC5500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="PAK File Manager" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
                        <TextBlock Text="Gerencie e substitua arquivos em .pak" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button Content="📂 Carregar PAK" 
                            Style="{StaticResource ModernButton}"
                            Click="LoadPakButton_Click"
                            Margin="30,0,10,0"
                            VerticalAlignment="Center"/>
                    <Button Content="🔄 Substituir Vários" 
                            Style="{StaticResource BatchButton}"
                            Click="BatchReplaceButton_Click"
                            IsEnabled="{Binding IsPakLoaded}"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="6" Padding="12,8" Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Arquivo:" FontWeight="SemiBold" Foreground="#555555" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding PakFileName}" Foreground="#0078D4" FontWeight="Medium"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Category Selector e Search Box -->
        <Border Grid.Row="1" 
                Background="#FFFFFF" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1" 
                Padding="20,15"
                Visibility="{Binding IsPakLoaded, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Seletor de Categoria -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="📁 Categoria:" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="#333333"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>

                    <ComboBox Grid.Column="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             DisplayMemberPath="DisplayName"
                             FontSize="13"
                             Padding="10,8"
                             Background="White"
                             BorderBrush="#0078D4"
                             BorderThickness="2"
                             VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Border Background="#FFF3CD" 
                                CornerRadius="4" 
                                Padding="10,6"
                                Visibility="{Binding IsLoadingItems, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏳" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Carregando..." 
                                          FontSize="12" 
                                          FontWeight="SemiBold"
                                          Foreground="#856404"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Barra de Busca -->
                <Grid Grid.Row="1" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="🔍 Buscar:" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="#333333"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Padding="10,8"
                             Background="White"
                             BorderBrush="#0078D4"
                             BorderThickness="2"
                             VerticalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Digite para buscar arquivos..." 
                                                                  Foreground="#999999" 
                                                                  FontSize="13"
                                                                  Margin="10,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Audio Player - MUDADO DE Grid.Row="2" PARA Grid.Row="3" -->
        <Border Grid.Row="2" 
                Background="#2C2C2C" 
                BorderBrush="#1A1A1A" 
                BorderThickness="0,1"
                Padding="20,15"
                Visibility="{Binding IsPlayerVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="🎵" 
                               FontSize="20" 
                               Margin="0,0,10,0" 
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentPlayingFile}" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentSampleRate, StringFormat='Sample Rate: {0} Hz'}" 
                                   Foreground="#AAAAAA" 
                                   FontSize="11" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2" 
                            Content="✕ Fechar" 
                            Background="#D83B01" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            FontSize="11"
                            Cursor="Hand"
                            Click="ClosePlayer_Click"/>
                </Grid>

                <!-- Progress Bar -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="CurrentTimeText"
                               Text="00:00" 
                               Foreground="White" 
                               FontSize="11" 
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>

                    <Slider Grid.Column="1" 
                            x:Name="ProgressSlider"
                            Minimum="0" 
                            Maximum="100" 
                            Value="0"
                            VerticalAlignment="Center"
                            Thumb.DragStarted="ProgressSlider_DragStarted"
                            Thumb.DragCompleted="ProgressSlider_DragCompleted"/>

                    <TextBlock Grid.Column="2" 
                               x:Name="TotalTimeText"
                               Text="00:00" 
                               Foreground="White" 
                               FontSize="11" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>

                <MediaElement x:Name="AudioPlayer" 
                              LoadedBehavior="Manual"
                              Visibility="Collapsed"
                              MediaOpened="AudioPlayer_MediaOpened"
                              MediaEnded="AudioPlayer_MediaEnded"/>
            </Grid>
        </Border>

        <!-- Content Area com ListView Virtualizado -->
        <ListView Grid.Row="3" 
                  ItemsSource="{Binding PakItems}"
                  Margin="20"
                  Background="Transparent"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.ScrollUnit="Pixel">
            
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,15"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- File Name and Status -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="📄" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FileName}" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="#333333"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Background="#E8F5E9" 
                                        CornerRadius="12" 
                                        Padding="12,4">
                                    <TextBlock Text="{Binding Status}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="#2E7D32"/>
                                </Border>
                            </Grid>

                            <!-- Details -->
                            <Grid Grid.Row="1" Margin="30,12,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                                    <TextBlock Text="Tamanho:" FontSize="11" Foreground="#888888" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="13" Foreground="#333333" Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Offset (Hexadecimal):" FontSize="11" Foreground="#888888" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding OffsetDisplay}" FontSize="13" Foreground="#333333" Margin="0,3,0,0" FontFamily="Consolas"/>
                                </StackPanel>
                            </Grid>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                <Button Content="🔊 Tocar Som" 
                                        Style="{StaticResource PlayButton}"
                                        Click="PlaySoundButton_Click"
                                        Margin="0,0,10,0"/>
                                <Button Content="🎵 Converter e Substituir" 
                                        Style="{StaticResource ConvertButton}"
                                        Click="ConvertAndReplaceButton_Click"
                                        Margin="0,0,10,0"/>
                                <Button Content="🔄 Substituir" 
                                        Style="{StaticResource ActionButton}"
                                        Click="ReplaceButton_Click"
                                        Margin="0,0,10,0"/>
                                <Button Content="💾 Extrair" 
                                        Style="{StaticResource ExtractButton}"
                                        Click="ExtractButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Status Bar - Grid.Row="4" está correto -->
        <Border Grid.Row="4" Background="#0078D4" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ℹ️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           FontSize="13"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" 
                           Text="{Binding PakItems.Count, StringFormat='Exibindo: {0} arquivo(s)'}" 
                           Foreground="White" 
                           FontSize="12"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
